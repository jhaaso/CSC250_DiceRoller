<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rollsTv"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="2 + 5 + 4 + 2 "
        android:textSize="36sp" />

    <TextView
        android:id="@+id/totalTv"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:gravity="center"
        android:text="13"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="557dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/sevenB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="36sp" />

            <Button
                android:id="@+id/fourB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="36sp" />

            <Button
                android:id="@+id/oneB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/zeroB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36sp" />

            <Button
                android:id="@+id/selectedDieTV"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:gravity="center|right"
                android:text="4"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/eightB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="36sp" />

            <Button
                android:id="@+id/fiveB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="36sp" />

            <Button
                android:id="@+id/twoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/clearB"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="CLEAR"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qtyTV"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:gravity="center|left"
                android:text="D12"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/nineB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sixB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="36sp" />

            <Button
                android:id="@+id/threeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/rollB"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:text="ROLL"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/d4B"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    app:srcCompat="@drawable/D4" />

                <ImageButton
                    android:id="@+id/d6B"
                    android:layout_width="114dp"
                    android:layout_height="40dp"
                    android:background="@drawable/D6"
                    app:srcCompat="@drawable/D6" />

                <ImageButton
                    android:id="@+id/d8B"
                    android:layout_width="114dp"
                    android:layout_height="64dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/D8" />

                <ImageButton
                    android:id="@+id/d10B"
                    android:layout_width="114dp"
                    android:layout_height="66dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/D10" />

                <ImageButton
                    android:id="@+id/d12B"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/D12" />

                <ImageButton
                    android:id="@+id/d20B"
                    android:layout_width="114dp"
                    android:layout_height="84dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/D20" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>